<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_useriid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table"
        android:gravity="center_vertical|center_horizontal"
        android:paddingVertical="@dimen/ver_padd_list_user"
        android:textSize="@dimen/fontsize_userlist"
        android:text="ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table"
        android:gravity="center_vertical|center_horizontal"
        android:paddingVertical="@dimen/ver_padd_list_user"
        android:textSize="@dimen/fontsize_userlist"
        android:text="姓名"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@+id/textView_useriid"
        app:layout_constraintStart_toEndOf="@+id/textView_useriid"
        app:layout_constraintTop_toTopOf="@+id/textView_useriid"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/textView_usertruename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table"
        android:gravity="center_vertical|center_horizontal"
        android:paddingVertical="@dimen/ver_padd_list_user"
        android:textSize="@dimen/fontsize_userlist"
        android:text="真实姓名"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@+id/textView_username"
        app:layout_constraintStart_toEndOf="@+id/textView_username"
        app:layout_constraintTop_toTopOf="@+id/textView_username"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/textView_userrole"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table"
        android:gravity="center_vertical|center_horizontal"
        android:paddingVertical="@dimen/ver_padd_list_user"
        android:textSize="@dimen/fontsize_userlist"
        android:text="角色"
        app:layout_constraintBottom_toBottomOf="@+id/textView_usertruename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_usertruename"
        app:layout_constraintTop_toTopOf="@+id/textView_usertruename"
        app:layout_constraintWidth_percent="0.2" />
</androidx.constraintlayout.widget.ConstraintLayout>