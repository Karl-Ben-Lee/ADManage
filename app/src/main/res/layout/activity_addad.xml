<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/BacBai"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/TopColor"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.97"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tit"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="502dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_adname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌名称"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adname"
                app:layout_constraintEnd_toStartOf="@+id/editText_adname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adname"
                app:layout_constraintWidth_percent="0.3" />

            <EditText
                android:id="@+id/editText_adname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="如：XX公园"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_id"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌内容"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adcontent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adcontent"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView_adtype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌类型"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_adtype"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/spinner_adtype"
                app:layout_constraintWidth_percent="0.3" />

            <EditText
                android:id="@+id/editText_adsize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="如：160*120"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editText_adstander"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxEms="4"
                android:text="广告尺寸(长*宽)"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adsize"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textViewstander"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌规格"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adstander"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adstander"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌位置"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adlocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adlocation"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌经度"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adlong"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adlong"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="广告牌纬度"
                app:layout_constraintBottom_toBottomOf="@+id/editText_adlat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_adlat"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="正面图片"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_ad_obverse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView_ad_obverse"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="反面图片"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_ad_reverse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView_ad_reverse"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="产权单位"
                app:layout_constraintBottom_toBottomOf="@+id/editText_sourposit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_sourposit"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="联系人"
                app:layout_constraintBottom_toBottomOf="@+id/editText_sourcontact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_sourcontact"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="联系电话"
                app:layout_constraintBottom_toBottomOf="@+id/editText_sourphone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_sourphone"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="使用单位"
                app:layout_constraintBottom_toBottomOf="@+id/editText_useposit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_useposit"
                app:layout_constraintWidth_percent="0.3" />

            <Spinner
                android:id="@+id/spinner_adtype"
                android:layout_width="0dp"
                android:dropDownVerticalOffset="33dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_adtype"
                app:layout_constraintTop_toBottomOf="@+id/editText_adname"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_adstander"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewstander"
                app:layout_constraintTop_toBottomOf="@+id/spinner_adtype"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="联系人"
                app:layout_constraintBottom_toBottomOf="@+id/editText_usecontact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_usecontact"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="联系电话"
                app:layout_constraintBottom_toBottomOf="@+id/editText_userphone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_userphone"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="审批单位"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_approvalposit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/spinner_approvalposit"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="审批时间"
                app:layout_constraintBottom_toBottomOf="@+id/editText_approvaldate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_approvaldate"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="有效起始时间"
                app:layout_constraintBottom_toBottomOf="@+id/editText_startdate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_startdate"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="有效截止时间"
                app:layout_constraintBottom_toBottomOf="@+id/editText_duedate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_duedate"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="拆除时间"
                app:layout_constraintBottom_toBottomOf="@+id/editText_movedate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_movedate"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="缴费金额"
                app:layout_constraintBottom_toBottomOf="@+id/editText_fee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editText_fee"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="缴费状态"
                app:layout_constraintBottom_toBottomOf="@+id/radioGroup_feestate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/radioGroup_feestate"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否符合规划"
                app:layout_constraintBottom_toBottomOf="@+id/radioGroup_planstate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/radioGroup_planstate"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否拆除"
                app:layout_constraintBottom_toBottomOf="@+id/radioGroup_movestate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/radioGroup_movestate"
                app:layout_constraintWidth_percent="0.3" />

            <EditText
                android:id="@+id/editText_sourposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="如：XX公司"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/editText_adsize"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_sourcontact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="请输入联系人姓名"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/editText_sourposit"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_sourphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入手机号或座机号"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/editText_sourcontact"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_useposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入使用单位"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/editText_sourphone"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_usecontact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="请输入联系人姓名"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/editText_useposit"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_userphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入手机号或座机号"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/editText_usecontact"
                app:layout_constraintWidth_percent="0.7" />

            <Spinner
                android:id="@+id/spinner_approvalposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:dropDownVerticalOffset="33dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/editText_userphone"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_approvaldate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="如：2020-2-2或2020/2/2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/spinner_approvalposit"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_startdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="如：2020-2-2或2020/2/2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/editText_approvaldate"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_duedate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="如：2020-2-2或2020/2/2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/editText_startdate"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_movedate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="如：2020-2-2或2020/2/2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/editText_duedate"
                app:layout_constraintWidth_percent="0.7" />

            <EditText
                android:id="@+id/editText_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="如：336.3或336"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/editText_movedate"
                app:layout_constraintWidth_percent="0.7" />

            <RadioGroup
                android:id="@+id/radioGroup_feestate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/editText_fee"
                app:layout_constraintWidth_percent="0.7"
                tools:ignore="MissingConstraints">

                <RadioButton
                    android:id="@+id/radioButton_fee_ture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已缴费" />

                <RadioButton
                    android:id="@+id/radioButton_fee_false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="未缴费" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup_planstate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup_feestate"
                app:layout_constraintWidth_percent="0.7">

                <RadioButton
                    android:id="@+id/radioButton_plan_true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="符合规划" />

                <RadioButton
                    android:id="@+id/radioButton_plan_false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="不符合规划" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup_movestate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup_planstate"
                app:layout_constraintWidth_percent="0.7">

                <RadioButton
                    android:id="@+id/radioButton_move_false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="未拆除" />

                <RadioButton
                    android:id="@+id/radioButton_move_true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已拆除" />
            </RadioGroup>

            <ImageView
                android:id="@+id/imageView_ad_obverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup_movestate"
                app:layout_constraintWidth_percent="0.7"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView_ad_reverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/imageView_ad_obverse"
                app:layout_constraintWidth_percent="0.7"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/editText_adcontent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入广告内容"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/editText_adlat"
                app:layout_constraintWidth_percent="0.7" />

            <Button
                android:id="@+id/but_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="fdsf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/but_delete"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_adcontent" />

            <Button
                android:id="@+id/but_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/but_commit"
                app:layout_constraintTop_toTopOf="@+id/but_commit"
                app:layout_constraintVertical_bias="0.0" />

